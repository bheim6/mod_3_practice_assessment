<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row forecast-10-day">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <ul>
      <% @days.each do |day| %>
      <li>
        Date: <%= day.date %>,
        High: <%= day.high %>,
        Low: <%= day.low %>,
        Conditions: <%= day.conditions %> 
      </li>
      <% end %>
    </ul>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
